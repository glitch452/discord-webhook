{
  "name": "@glitch452/discord-webhook",
  "version": "0.0.0",
  "description": "Allows for easy webhook sending through discord's webhook API",
  "type": "module",
  "scripts": {
    "build": "tsup",
    "clean": "rimraf dist",
    "format:ci": "prettier --check '**.{css,html,mjs,cjs,js,json,jsx,cjsx,mjsx,md,mdx,scss,cts,ts,tsx,ctsx,mtsx,yaml,yml}'",
    "format": "prettier --write .",
    "lint:ci": "eslint . --max-warnings 0",
    "lint:dist": "npx --yes @arethetypeswrong/cli --pack ./dist",
    "lint:inspect": "npx @eslint/config-inspector",
    "lint:nc": "eslint . --max-warnings 0 --report-unused-disable-directives --fix",
    "lint": "eslint . --max-warnings 0 --cache --report-unused-disable-directives --fix",
    "postbuild": "node scripts/copy-dist-files.mjs . dist && node scripts/prepare-package-json.mjs src dist",
    "pre-commit": "lint-staged",
    "prebuild": "npm run clean",
    "prepare": "husky",
    "test:ci": "vitest run --config vite.config.ci.ts --coverage",
    "test:snap": "vitest run --coverage --update",
    "test:w": "vitest",
    "test": "vitest run --coverage",
    "type": "tsc --noEmit -p tsconfig.json"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/glitch452/discord-webhook.git"
  },
  "author": "David Dearden",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/glitch452/discord-webhook/issues"
  },
  "homepage": "https://github.com/glitch452/discord-webhook#readme",
  "keywords": [
    "Webhook",
    "Discord",
    "Bot"
  ],
  "dependencies": {
    "http-status-codes": "2.3.0",
    "zod": "4.3.6"
  },
  "devDependencies": {
    "@commander-js/extra-typings": "14.0.0",
    "@commitlint/cli": "20.4.1",
    "@commitlint/config-conventional": "20.4.1",
    "@eslint/config-inspector": "1.4.2",
    "@total-typescript/ts-reset": "0.6.1",
    "@types/node": "24.10.13",
    "@vitest/coverage-v8": "4.0.18",
    "commander": "14.0.3",
    "eslint": "9.39.2",
    "eslint-config-spartan": "5.14.2",
    "husky": "9.1.7",
    "lint-staged": "16.2.7",
    "msw": "2.12.10",
    "prettier": "3.8.1",
    "rimraf": "6.1.2",
    "tsup": "8.5.1",
    "typescript": "5.9.3",
    "vitest": "4.0.18"
  },
  "engines": {
    "node": ">=20"
  }
}
